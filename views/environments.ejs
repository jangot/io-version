<!DOCTYPE html>
<html class="h-100">
<head>
<title>IO Versions - rules</title>
<%- include('partial/include-resources') %>
<script src="/public/environments.js"></script>
</head>
<body>
<%- include('partial/header'); %>
<div class="container-fluid my-md-4">
    <div class="row">
        <div class="col-3 position-relative">
            <div class="card position-sticky top-0 start-0">
                <div class="card-body">
                    <% for (key of keys) { %>
                        <div class="input-group mb-4 j-keys" data-key="<%= JSON.stringify(key) %>">
                            <input type="text" name="name" class="form-control" value="<%= key.name %>">
                            <input type="number" name="specificity" class="form-control" value="<%= key.specificity %>">
                            <button class="btn btn-primary" value="save"><i class="bi bi-save"></i></button>
                            <button class="btn btn-danger" value="remove"><i class="bi bi-trash3-fill"></i></button>
                        </div>
                    <% } %>
                    <div class="input-group mb-4 j-keys"  data-key="<%= JSON.stringify(null) %>">
                        <input type="text" name="name" class="form-control">
                        <input type="number"  name="specificity" class="form-control">
                        <button class="btn btn-primary" disabled value="save"><i class="bi bi-save"></i></button>
                        <button class="btn btn-danger" disabled value="remove"><i class="bi bi-trash3-fill"></i></button>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-9">
            <% for (env of environments) { %>
                <%- include('environments/item'); %>
                <br>
            <% } %>
        </div>
    </div>
</div>
<%- include('partial/footer') %>
</body>
</html>